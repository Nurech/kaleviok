{
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "lib", // <-- Correct output directory for compiled JS
        "rootDir": "src", // <-- Ensure source files are inside src/
        "target": "ES2022",
        "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts" // <-- Ensure TypeScript files are included
    ]
}
